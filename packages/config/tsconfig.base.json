{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "baseUrl": ".",
      "paths": {
        "@core/*": ["packages/core/src/*"],
        "@ui/*": ["packages/ui/src/*"],
        "@api/*": ["packages/api/src/*"]
      },
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "types": ["node"]
    }
  }
